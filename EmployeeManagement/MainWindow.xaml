<Window x:Class="EmployeeManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeManagement"
        mc:Ignorable="d"
        Background="Transparent"
        Title="MainWindow" Height="900" Width="1600">
    <Grid Background="#ffe4e1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border Background="#f1c9d8" Grid.Column="0">
            <StackPanel VerticalAlignment="Center">
                <Button Content="Главная страница" Margin="10, 5" FontSize="25"/>
                <Button Content="Список сотрудников" Margin="10, 5" FontSize="25"/>
            </StackPanel>
        </Border>
        <Frame x:Name="MainFrame" Grid.Column="1"/>
    </Grid>
</Window>
